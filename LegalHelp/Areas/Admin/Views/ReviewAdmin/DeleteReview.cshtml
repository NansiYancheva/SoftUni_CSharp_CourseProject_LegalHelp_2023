@model ReviewFormModel

@{
    ViewData["Title"] = "Delete Single Review";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr></hr>

<form method="post" asp-action="DeleteReview">
    <div class="row">
        <div class="col-md-8">

            <div class="form-group">
                <label asp-for="Object" class="control-label"></label>
                <input asp-for="Object" class="form-control" disabled="disabled" />

                <input type="hidden" asp-for="Object" value="@Model.Object" />
                <input type="hidden" asp-for="ObjectId" value="@Model.ObjectId" />
            </div>

            <div class="form-group">
                <label asp-for="TextReview" class="control-label"></label>
                <input asp-for="TextReview" class="form-control" disabled="disabled" />

                <input type="hidden" asp-for="TextReview" value="@Model.TextReview" />
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>
    </div>
</form>
