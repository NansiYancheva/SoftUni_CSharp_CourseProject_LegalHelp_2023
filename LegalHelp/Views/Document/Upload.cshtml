@model DocumentFormModel

@{
    ViewData["Title"] = "Add Document To Ticket";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr></hr>

<h8>Ticket Subject: @Model.TicketSubject</h8>
<p></p>
<h9>Ticket Description: @Model.TicketDescription</h9>
<p></p>

<div class="row">


    <form method="post" asp-controller="Document" asp-action="Upload" asp-route-ticketId="@Model.TicketId" enctype="multipart/form-data">
       <input type="hidden" asp-for="TicketId" value="@Model.TicketId" />
        <input type="hidden" asp-for="TicketSubject" value="@Model.TicketSubject" />
        <input type="hidden" asp-for="TicketDescription" value="@Model.TicketDescription" />
          <div class="form-group">
            <label asp-for="DocumentName"></label>
            <input asp-for="DocumentName" class="form-control" placeholder="Enter document name">
            <span asp-validation-for="DocumentName" class="small text-danger"></span>
            </div>
        <p></p>
        <div class="form-group">
            <label asp-for="DocumentDescription"></label>
            <input asp-for="DocumentDescription" class="form-control" placeholder="Enter document description">
            <span asp-validation-for="DocumentDescription" class="small text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DocumentTypeId"></label>
            <select asp-for="DocumentTypeId" class="form-control" placeholder="Choose document type">
                @foreach (var type in Model.Types)
                {
                    <option value="@type.Id">@type.Name</option>
                }
            </select>
            <span asp-validation-for="DocumentTypeId" class="small text-danger"></span>
        </div>
        <p></p>

        <div class="form-group">
            <label for="documentFile">Document File</label>
            <input type="file" class="form-control" id="documentFile" name="documentFile">
        </div>
        <p></p>


        <button type="submit" class="btn btn-primary">Add</button>
        </form>
</div>

