@model TicketPerDeleteFormModel

@{
    ViewBag.Title = "Delete Ticket";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form method="post" asp-action="Delete">
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="Subject" class="control-label"></label>
                <input asp-for="Subject" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="RequestDescription" class="control-label"></label>
                <input asp-for="RequestDescription" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                @if (Model.ResolvedTicketStatus == true)
                {
                    <p>The ticket is resolved.</p>
                    @*and it answer is....*@
                }
                else
                {
                    <p>The ticket is not resolved.</p>
                }
            </div>
            <div class="form-group">
                @if (!Model.LegalAdviseId.HasValue)
                {
                    <p>The ticket does not have an answer.</p>
                }
                else
                {
                    <p>@Model.Response</p>
                }
            </div>
           @* <div class="form-group">
                <label asp-for="Response" class="control-label"></label>
                <input asp-for="Response" class="form-control" disabled="disabled" />
            </div>*@
            <div class="form-group mt-2">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>
    </div>
</form>
